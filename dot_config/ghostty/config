# best theme to have ever existed
theme = catppuccin-mocha

# font settings
font-size = 16 
font-thicken = true

# fully disable ligatures
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# window styling
window-padding-y = 0 
background-opacity = 0.98
background-blur-radius = 20

# start maximized by using ridiculously high window size
window-height = 9999
window-width = 9999

# general behaviour
confirm-close-surface = false
# use default catppuccin-mocha colors for cursor,
# as the theme seems to use the incorrect fg color
cursor-color = #cdd6f4
cursor-text = #1e1e2e
# cursor-invert-fg-bg = true

# macOS stuff
macos-titlebar-style = tabs
macos-option-as-alt = true
link-url = true
